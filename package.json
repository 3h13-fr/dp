{
  "name": "mobility-platform",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm run -r build",
    "verify:urls": "node scripts/verify-urls.mjs",
    "db:generate": "pnpm --filter database generate",
    "db:migrate": "dotenv -e .env -- pnpm --filter database migrate:deploy",
    "db:seed": "dotenv -e .env -- pnpm --filter database db:seed",
    "db:studio": "dotenv -e .env -- pnpm --filter database studio",
    "kill:ports": "sh -c 'for p in 4000 3000 3001 3002; do PID=$(lsof -t -i :$p 2>/dev/null); [ -n \"$PID\" ] && kill -9 $PID && echo \"Port $p freed (PID $PID)\"; done; exit 0'"
  },
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0"
}
