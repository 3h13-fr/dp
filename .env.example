# Copy to .env and fill values

# Database (required for API)
DATABASE_URL="postgresql://mobility:mobility@localhost:5432/mobility"

# JWT (API)
JWT_SECRET="change-me-in-production"
JWT_EXPIRES="7d"

# CORS (API) — comma-separated origins
CORS_ORIGIN="http://localhost:3000"

# Stripe (API)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Redis (API — queues BullMQ)
REDIS_URL="redis://localhost:6379"

# SMTP (API — Mailhog in dev: host 1025, no auth)
SMTP_HOST="localhost"
SMTP_PORT="1025"
# SMTP_FROM="noreply@localhost"
# SMTP_USER=""
# SMTP_PASS=""

# S3-compatible storage (API — photos, KYC, incidents)
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_REGION="eu-west-3"
AWS_S3_BUCKET="drivepark-upload"
# Optional: custom endpoint (e.g. MinIO, DigitalOcean Spaces)
# AWS_S3_ENDPOINT="https://..."
# Public base URL for stored files (default: https://BUCKET.s3.REGION.amazonaws.com)
# AWS_S3_PUBLIC_URL="https://..."

# VIN API (API — vehicle specs from VIN)
# Enable/disable NHTSA VIN decoder API (default: true)
# VIN_API_ENABLED=true

# NHTSA Sync (API — automatic makes/models synchronization)
# Cron pattern for automatic sync (default: daily at 2 AM)
# NHTSA_SYNC_CRON=0 2 * * *

# Optional: frontend (apps/web/.env.local)
# NEXT_PUBLIC_API_URL=http://localhost:4000
